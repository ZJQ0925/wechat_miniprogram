/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 
.divider{
	width: 100%;
	height: 30rpx;
	background: #f7f7f7;
}
.bg-white{
	background: white;
}
.cell{
	background:#ffffff;
	font-size:30rpx;
}
.cell-item{
	padding: 20rpx 30rpx;
	border-bottom: 1rpx solid #ddd;
}
/* 通用功能：箭头> */
.arrow{
	display:flex;
	justify-content: space-between;
	align-items: center;
}
.arrow::after{
	content: "";
	width:15rpx;
	height: 15rpx;
	border-top:3rpx solid #ccc;
	border-right: 3rpx solid #ccc;
	transform: rotate(45deg);
}
/* 通用清除浮动 */
.clearfix::after{
	content: "";
	display: block;
	clear: both;
}
.d-flex{
	display: flex;
	flex-direction: row;
	justify-content: space-around;
}
