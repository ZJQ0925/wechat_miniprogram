/* 首页样式 */
/* 导航栏 */
.nav{
	width:100%;
	height:60rpx;
	display: block;
	background-color: #F7F7F7;
	border-bottom: 4rpx solid #ccc;
	box-sizing:border-box;
	position: fixed;
	top:0;
	left:0;
	z-index: 999;
}
.nav-item{
	float:left;
	font-size:3.6vmin;
	width: 25%;
	text-align: center;
	line-height: 60rpx;
} 
navigator.nav-item:first-child{
	border-bottom:#ff0035;
}
.index-content{
	width:100%;
	position: relative;
	top:60rpx;
	left: 0;
}
/* 搜索框 */
.search{
	width:98%;
	height:30rpx;
	margin: 20rpx auto;
	background-color: #F7F7F7;
	border-radius: 20rpx;
	font-size:3.5vmin;
	text-align: center;
}
/* 轮播 */
.container{
	width:100%;
	background:#FFFFfC;
}
.container .swiper{
	width:100%;
	height:390rpx;
}
.container .swiper image{
	width: 100%;
	height:390rpx;
}
/* 九宫格 */
.sudoku{
      width:100%;
      height:100%;
      margin:0 auto;
			display: flex;
      flex-wrap: wrap;/*折分换行*/

    }
    .sudoku-item{
      width:25%;
      height:200rpx;
			font-size: 3.6vmin;
			font-weight: bold;
			text-align: center;
			color:#515151;
    }
		.sudoku-item image{
			width: 80rpx;
			height: 80rpx;
			margin-bottom:20rpx;
		}
		/* 分割块 */
		.divider{
			height:36rpx;
			background-color:#f1f1f1;
		}
		/* 限时抢 */
.fl-sal{
	width: 98vw;
	height: 60rpx;
	color: #1E1E1E;
	font-size:32rpx;
	text-align: center;
	line-height: 60rpx;
	font-weight: bold;
	box-shadow: 0 0 3rpx #666;
	border-radius: 10rpx;
	margin:20rpx auto;
}
/* 商品列表页 */
.shop{
	font-size:28rpx;
	border-bottom: 1px solid #d8d8d8;
	position: relative;
}
.shop::after{
	content: "";
	display: block;
	clear: both;
}
.shop view:first-child,
.shop view:nth-child(2){
	float: left;
}
.shop .shop-img{
	margin:16rpx;
}
.shop .shop-img image{
	width:180rpx;
	height:180rpx;
	border:2px solid #ccc;
}
.shop-info{
	margin-top:16rpx;
}
.shop-info text{
	color:#666;
	line-height: 1.8;
}
.countDown text{
	padding:0 6rpx;
	margin:0 8rpx;
	background:#ff0035;
	color:white !important;
}
.new-price{
	font-size:32rpx !important;
	font-weight:600;
	padding-right:5rpx;
}
.old-price{
	font-size:26rpx !important;
	text-decoration: line-through;
}
.red{
	color: #ff0035 !important;
}
.btn{
	width:120rpx;
	height:60rpx;
	display: inline-block;
	background:#ff0035;
	color: white !important;
	font-size:25rpx;
	text-align: center;
	line-height:60rpx !important;
	box-shadow: 0 0 2rpx #f1f1f1;
	border-radius: 6rpx;
}
.pos-ab{
	position: absolute;
	right:20rpx;
	bottom:10rpx;
}
.shop-info text:first-child{
	font-size:30rpx;
	color:black;
}
